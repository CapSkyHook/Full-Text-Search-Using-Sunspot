<h1>Articles Search</h1>

<%= link_to 'All Articles', articles_url %>

<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Go", name: nil %>
  </p>
<% end %>

<ul>
  <% @articles.each do |article| %>
    <li>
      <h3>
        <%= link_to article.title,
          controller: "articles",
          action: "show",
          id: article.id%>
      </h3>
      <% if article %>
       <%= article.text %>
      <% end %>
    </li>
  <% end %>
</ul>

