<h1>Articles</h1>

<%= link_to 'New article', new_article_path %>

<form method="get" action="search">
  <p>
    Search for: <input type="text" name="query">
    <%= submit_tag "Go", name: nil %>
  </p>
</form>

<ul>
  <% @articles.each do |article| %>
    <li>
      <h3>
        <%= article.title %>
      </h3>
      <p>
        <%= article.text %>
      </p>
    </li>
  <% end -%>
</ul>
